			<Image Margin="-6,0,0,-4" Width="119" Source="League_Step5_Complete.png" Stretch="Fill" Height="78"/>
			<Image HorizontalAlignment="Left" Margin="-5,22,0,24" Width="65" Source="../arrow.png" Stretch="Fill" d:LayoutOverrides="Height"/>
			<Image Margin="-6,0,0,-4" Width="119" Source="League_Step6_Active.png" Stretch="Fill"/>
		</StackPanel>
		<Button x:Name="btnNext" Height="29" Margin="329,0,0,130" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="137">
			<HyperlinkButton Height="16" Width="108" Content="Go to League Page" Foreground="Black" TargetName="ContentFrame" NavigateUri="/LeagueSetup/confirmation"/>
		</Button>
		<TextBlock HorizontalAlignment="Center" Margin="24,193,0,137" FontSize="24" Text="Congratulations! You made it this far... woot woot!" TextWrapping="Wrap"/>
